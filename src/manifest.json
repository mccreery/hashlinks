{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "description": "__MSG_extensionDescription__",

  "author": "Sam McCreery",
  "homepage_url": "https://github.com/mccreery/hashlinks",

  "default_locale": "en",

  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },

  "permissions": [
    "menus",
    "clipboardWrite",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ]
}
